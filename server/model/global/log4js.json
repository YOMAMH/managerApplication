  "replaceConsole": true,
  "levels":
  {
    "logs":"ALL",
    "console":"ALL",
    "database":"ALL",
    "get":"ALL",
    "post":"ALL",
    "delete":"ALL",
    "data":"ALL",
    "server":"ALL"
